<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceScreen
        android:key="device_specific_gesture_settings"
        android:title="@string/gesture_settings_title">
        <intent
            android:action="com.cyanogenmod.action.LAUNCH_TOUCHSCREEN_GESTURE_SETTINGS"
            android:targetClass="com.cyanogenmod.settings.device.TouchscreenGestureSettings"
            android:targetPackage="com.cyanogenmod.settings.device" />
    </PreferenceScreen>

    <PreferenceCategory android:title="@string/gestures_service_title">
        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:defaultValue="false"
            android:key="gestures_service_enabled"
            android:title="@string/gestures_service_enabled_title" />

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:defaultValue="false"
            android:dependency="gestures_service_enabled"
            android:key="gestures_service_action_screenshot_enabled"
            android:summary="@string/gestures_service_action_screenshot_enabled_summary"
            android:title="@string/gestures_service_action_screenshot_enabled_title" />
    </PreferenceCategory>

</PreferenceScreen>

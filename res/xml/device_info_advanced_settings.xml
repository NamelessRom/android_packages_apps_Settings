<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/about_settings">

    <Preference android:key="kernel_version"
        android:title="@string/kernel_version"
        android:summary="@string/device_info_default" />

    <Preference android:key="device_memory"
        android:title="@string/memory"
        android:summary="@string/device_info_default" />

    <PreferenceCategory android:key="category_device_cpu"
        android:title="@string/cpu_processor">

        <Preference android:key="device_cpu_hardware"
            android:title="@string/cpu_processor_hardware"
            android:summary="@string/device_info_default" />

        <Preference android:key="device_cpu_type"
            android:title="@string/cpu_type"
            android:summary="@string/device_info_default" />

        <Preference android:key="device_cpu_features"
            android:title="@string/cpu_features"
            android:summary="@string/device_info_default" />

    </PreferenceCategory>

    <PreferenceCategory android:key="category_device_gpu"
        android:title="@string/gpu_title">

        <!-- Programmatically filled -->

    </PreferenceCategory>

</PreferenceScreen>

<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="misc_crash_report"
        android:title="@string/misc_crash_report">

        <com.android.settings.nameless.preferences.NamelessSettingCheckBoxPreference
            android:key="enable_acra"
            android:title="@string/enable_acra_title"
            android:summary="@string/enable_acra_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="misc_tweaks_srec"
        android:title="@*android:string/global_action_screenrecord">

        <com.android.settings.nameless.preferences.SystemSettingCheckBoxPreference
            android:key="srec_enable_touches"
            android:title="@string/srec_enable_touches_title"
            android:summary="@string/srec_enable_touches_summary" />

        <com.android.settings.nameless.preferences.SystemSettingCheckBoxPreference
            android:key="srec_enable_mic"
            android:title="@string/srec_enable_mic_title"
            android:summary="@string/srec_enable_mic_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="misc_others"
        android:title="@string/misc_others">

        <com.android.settings.nameless.preferences.NamelessSettingCheckBoxPreference
            android:key="force_multi_pane"
            android:title="@string/force_multi_pane"
            android:summary="@string/force_multi_pane_summary" />

    </PreferenceCategory>

</PreferenceScreen>
